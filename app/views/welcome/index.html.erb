<h1>Welcome to YNG <% if signed_in? %><%= current_brand.company_name %><% end %></h1>

<% unless brand_signed_in? %>
  <%= link_to 'Sign In', brand_session_path %><br />
  <%= link_to 'Sign Up', new_brand_registration_path %>
<% else %>
  <%= link_to 'Manage Products', brand_path(current_brand.id) %><br />
  <%= link_to 'Company Settings', edit_brand_registration_path %><br />
  <%= link_to 'Sign Out', destroy_brand_session_path, method: :delete %>
<% end %>

<%= @brand %>